<!-- NAVIGATION ON THE LEFT -->
<aside id="left-panel" class="left-panel">
   <%- include('./partials/nav.ejs') %>
</aside>
<!-- NAVIGATION AT THE TOP -->
<div id="right-panel" class="right-panel">
   <!-- Header-->
   <%- include('./partials/header.ejs') %>


   <div class="container">



      <div class="content">

         <div class="animated fadeIn">
            <!-- Widgets  -->
            <div class="row">
               <div class="col-lg-4 col-md-6">
                  <div class="card">
                     <div class="card-body">
                        <div class="stat-widget-five">
                           <div class="stat-icon dib flat-color-1">
                              <i class="pe-7s-cash"></i>
                           </div>
                           <div class="stat-content">
                              <div class="text-left dib">
                                 <div class="stat-text"><span class="count" id="filtered-calories"></span></div>
                                 <div class="stat-heading">Filtered Calories</div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="col-lg-4 col-md-6">
                  <div class="card">
                     <div class="card-body">
                        <div class="stat-widget-five">
                           <div class="stat-icon dib flat-color-1">
                              <i class="pe-7s-cash"></i>
                           </div>
                           <div class="stat-content">
                              <div class="text-left dib">
                                 <div class="stat-text"><span class="count" id="filtered-run-distance"></span>
                                 </div>
                                 <div class="stat-heading">Filtered KM Run</div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="col-lg-4 col-md-6">
                  <div class="card">
                     <div class="card-body">
                        <div class="stat-widget-five">
                           <div class="stat-icon dib flat-color-1">
                              <i class="pe-7s-cash"></i>
                           </div>
                           <div class="stat-content">
                              <div class="text-left dib">
                                 <div class="stat-text"><span class="count" id="filtered-ride-distance"></span>
                                 </div>
                                 <div class="stat-heading">Filtered KM Cycled</div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>



         <div class="row">
            <div class="col-3">
               <select class="form-control" name="" id="fitness-select">
                  <option value="all">All</option>
                  <option value="workouts">Workouts</option>
                  <option value="runs">Runs</option>
                  <option value="rides">Rides</option>
               </select>
            </div>
            <div class="col-3"></div>

            <div class="col-6">
               <input id="fitness-cal" type="text" name="dates" value="" />
            </div>
         </div>


         <div class="animated fadeIn">
            <!-- Widgets  -->

            <div id="chart-container" class="container-fluid"></div>


         </div>
      </div>
   </div>

</div>